{
	"name": "sveltesociety.dev",
	"repository": "https://github.com/svelte-society/sveltesociety.dev.git",
	"packageManager": "pnpm@8.6.6",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"start": "vite dev --open",
		"build": "vite build",
		"preview": "vite preview",
		"sync": "svelte-kit sync",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"test": "vitest",
		"lint": "prettier --check ./**/*.{js,ts,css,md,svelte,html,json} && eslint . && node scripts/validateData.js",
		"format": "prettier --write ./**/*.{js,ts,css,md,svelte,html,json}",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@actions/core": "^1.10.1",
		"@macfja/svelte-persistent-store": "2.4.1",
		"@sveltejs/adapter-static": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.1",
		"@types/itemsjs": "^2.1.6",
		"@typescript-eslint/eslint-plugin": "^6.14.0",
		"@typescript-eslint/parser": "^6.14.0",
		"eslint": "^8.55.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"graphql-request": "^3.7.0",
		"highlight.js": "^11.6.0",
		"husky": "^7.0.4",
		"itemsjs": "^2.1.24",
		"lint-staged": "^13.3.0",
		"mdsvex": "^0.11.0",
		"package-name-regex": "^3.1.1",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"rehype-slug": "^5.1.0",
		"svelte": "^4.2.8",
		"svelte-check": "^3.6.2",
		"svelte-highlight": "^7.3.0",
		"svelte-select": "^4.4.7",
		"typescript": "^5.3.3",
		"undici": "^5.28.2",
		"vite": "^5.0.10",
		"vitest": "^1.0.4",
		"zod": "^3.22.4"
	},
	"lint-staged": {
		"*.{js,ts,css,md,svx,svelte,html,json}": "prettier --write"
	}
}
